<UserControl x:Class="PersonalSpaceUI.Controls.NavItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PersonalSpaceUI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid MouseUp="Grid_MouseUp">
        <Border BorderBrush="#FFB0B0B0" BorderThickness="0,0,0,1">
            <TextBlock Text="{Binding Text}"  HorizontalAlignment="Center" Padding="0,10,0,10" />
        </Border>
    </Grid>
</UserControl>